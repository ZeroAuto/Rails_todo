<div class="row">

<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if false %><div id="create_list"><%= f.label :name %></div><br><% end %>
    <div style="margin-top:20px;"><%= f.text_field :name, :value => "What would you like name your new list?" %></div>
  </div>

  <div class="actions">
    <%= link_to 'No thanks, Cancel', lists_path, :class => "cancel_link" %><%= f.submit %>
  </div>
<% end %>

</div>